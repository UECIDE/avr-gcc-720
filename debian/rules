#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

FILE=unknown
URL=unknown
VER=7.2.0
UVER=720
COMPILER=avr-gcc
GCCVER=majenko1
SRC=http://majenko.co.uk/downloads
LOGO=Atmel_logo.svg

ifeq (${DEB_HOST_ARCH},linux-amd64)
	URL=${SRC}/${COMPILER}-${VER}-${GCCVER}-x86_64-pc-linux-gnu.tar.bz2
	EXTRACT=tar -C build -jxf
	SUFFIX=tar.bz2
endif

ifeq (${DEB_HOST_ARCH},linux-i386)
	URL=${SRC}/${COMPILER}-${VER}-${GCCVER}-i686-pc-linux-gnu.tar.bz2
	EXTRACT=tar -C build -jxf
	SUFFIX=tar.bz2
endif

ifeq (${DEB_HOST_ARCH},linux-armhf)
	URL=${SRC}/${COMPILER}-${VER}-${GCCVER}-armhf-pc-linux-gnu.tar.bz2
	EXTRACT=tar -C build -jxf
	SUFFIX=tar.bz2
endif

ifeq (${DEB_HOST_ARCH},linux-armel)
	URL=${SRC}/${COMPILER}-${VER}-${GCCVER}-armhf-pc-linux-gnu.tar.bz2
	EXTRACT=tar -C build -jxf
	SUFFIX=tar.bz2
endif

ifeq (${DEB_HOST_ARCH},windows-i386)
	URL=${SRC}/${COMPILER}-${VER}-${GCCVER}-i686-mingw32.tar.bz2
	EXTRACT=tar -C build -jxf
	SUFFIX=tar.bz2
endif

ifeq (${DEB_HOST_ARCH},windows-amd64)
	URL=${SRC}/${COMPILER}-${VER}-${GCCVER}-x86_64-mingw32.tar.bz2
	EXTRACT=tar -C build -jxf
	SUFFIX=tar.bz2
endif

ifeq (${DEB_HOST_ARCH},darwin-amd64)
	URL=${SRC}/${COMPILER}-${VER}-${GCCVER}-i386-apple-darwin11.tar.bz2
	EXTRACT=tar -C build -jxf
	SUFFIX=tar.bz2
endif


%:
	dh $@ 

override_dh_builddeb:
	dh_builddeb -- -Zgzip

override_dh_strip:
override_dh_perl:
override_dh_installdocs:
override_dh_installchangelogs:
override_dh_link:
override_dh_compress:
override_dh_fixperms:
override_dh_makeshlibs:
override_dh_shlibdeps:

override_dh_auto_build:
	wget -c -O ../../downloads/${COMPILER}-${DEB_HOST_ARCH}-${VER}.${SUFFIX} ${URL}
	rm -rf build
	mkdir -p build
	${EXTRACT} ../../downloads/${COMPILER}-${DEB_HOST_ARCH}-${VER}.${SUFFIX}

override_dh_auto_clean:
	rm -rf build

override_dh_auto_install:
	mkdir -p debian/${COMPILER}-${UVER}/compilers/${COMPILER}-${UVER}
	mkdir -p debian/${COMPILER}-${UVER}/compilers/${COMPILER}-${UVER}/icons
	cp -RL build/avr/* debian/${COMPILER}-${UVER}/compilers/${COMPILER}-${UVER}/
	cp debian/uecide/compiler.txt debian/${COMPILER}-${UVER}/compilers/${COMPILER}-${UVER}/
	convert debian/uecide/${LOGO} -resize 128 -alpha remove -background white debian/${COMPILER}-${UVER}/compilers/${COMPILER}-${UVER}/icons/logo128.png
	convert debian/uecide/${LOGO} -resize 64 -alpha remove -background white debian/${COMPILER}-${UVER}/compilers/${COMPILER}-${UVER}/icons/logo64.png
	convert debian/uecide/${LOGO} -resize 48 -alpha remove -background white debian/${COMPILER}-${UVER}/compilers/${COMPILER}-${UVER}/icons/logo48.png
	convert debian/uecide/${LOGO} -resize 32 -alpha remove -background white debian/${COMPILER}-${UVER}/compilers/${COMPILER}-${UVER}/icons/logo32.png
	convert debian/uecide/${LOGO} -resize 22 -alpha remove -background white debian/${COMPILER}-${UVER}/compilers/${COMPILER}-${UVER}/icons/logo22.png
	convert debian/uecide/${LOGO} -resize 16 -alpha remove -background white debian/${COMPILER}-${UVER}/compilers/${COMPILER}-${UVER}/icons/logo16.png
